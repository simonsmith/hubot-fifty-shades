{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "space-in-parens": [2, "never"],
    "array-bracket-spacing": [2, "never"],
    "object-curly-spacing": [2, "never"],
    "semi": 2,
    "comma-dangle": [1, "always-multiline"],
    "quotes": [2, "single", {"avoidEscape": true, "allowTemplateLiterals": true}],
    "semi-spacing": 2,
    "no-use-before-define": 0,
    "eqeqeq": 2,
    "no-eq-null": 2,
    "no-extend-native": 2,
    "no-caller": 2,
    "no-multi-spaces": 2
  }
}


